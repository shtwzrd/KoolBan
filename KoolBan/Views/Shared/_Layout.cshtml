<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>KoolBan @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="navbar-inverse navbar-static-top" id="top" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("KoolBan", "Index", "Home", new { id = "Demo" }, new { @class = "navbar-brand" })
            </div>
            <nav class="collapse navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Demo", "Index", "Home", new { id = "Demo" }, null)</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { }, null)</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @using (Html.BeginForm("Index", "Home"))
                    {
                        <li>
                            <text style ="color: #777; ">Go to project &nbsp;&nbsp;</text>
                            @Html.TextBox("id", "id", new { @placeholder = "Project name", @style = "margin-bottom: 15px; margin-top: 15px;" })
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </header>
    <!-- <div class="container body-content"> -->
    @RenderBody()
    @RenderSection("SPAViews", required: false)
    <hr />
    <footer>
        <p align="center"><small>Check us out on <a href="http://github.com/warreq/koolban">GitHub</a></small></p>
        <p align="center"><small>Code licensed under the GPLv3</small></p>
    </footer>
    <!--</div>-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
